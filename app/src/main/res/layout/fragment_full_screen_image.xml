        <variable
            name="product"
            type="lt.manufaktura.app.model.product.Product" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.account.product.FullScreenImageFragment">

        <ImageView
